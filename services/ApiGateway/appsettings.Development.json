{
  "JwtSettings": {
    "Key": "Hospital#Que#Management@SecretKey123!",
    "Issuer": "QMSAuthServer",
    "Audience": "QMSClient",
    "ExpiryMinutes": 60
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Yarp.ReverseProxy": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/api-gateway-.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Yarp.ReverseProxy": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "authLogin": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/api/Auth/login" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ],
        "Metadata": { "AllowAnonymous": "true" }
      },
      "authRegister": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/api/Auth/register" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ],
        "Metadata": { "AllowAnonymous": "true" }
      },
      "authApi": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/api/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "authSwagger": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ],
        "Metadata": { "AllowAnonymous": "true" }
      },
      "appointmentApi": {
        "ClusterId": "appointmentCluster",
        "Match": { "Path": "/appointments/api/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/appointments" } ]
      },
      "appointmentSwagger": {
        "ClusterId": "appointmentCluster",
        "Match": { "Path": "/appointments/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/appointments" } ],
        "Metadata": { "AllowAnonymous": "true" }
      },
      "queueApi": {
        "ClusterId": "queueCluster",
        "Match": { "Path": "/queue/api/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/queue" } ]
      },
      "queueSwagger": {
        "ClusterId": "queueCluster",
        "Match": { "Path": "/queue/swagger/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/queue" } ],
        "Metadata": { "AllowAnonymous": "true" }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "auth": { "Address": "https://localhost:7088/" }
        }
      },
      "appointmentCluster": {
        "Destinations": {
          "appointment": { "Address": "https://localhost:7094/" }
        }
      },
      "queueCluster": {
        "Destinations": {
          "queue": { "Address": "https://localhost:7072/" }
        }
      }
    }
  }
}
